{% schema %}
{
  "name": "Custom Banner",
  "presets": [{ "name": "Custom Banner" }],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Welcome to our store"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ]
}
{% endschema %}

{% style %}
  .banner-body {
    background-color: #000000;
    padding: 1em 2em;
    position: fixed;
    width: 100%;
  }
{% endstyle %}

<div class="banner-body">
  <h1>{{ section.settings.title }}</h1>
  <p>{{ section.settings.content }}</p>
  <a href="{{ section.settings.link }}">
    <img src="{{ section.settings.image | img_url: width: 145 }}" alt="banner_image">
  </a>
</div>
